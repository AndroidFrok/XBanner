<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.stx.xhb.demo.ClipChildrenModeActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.stx.xhb.androidx.XBanner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:AutoPlayTime="3000"
                app:isAutoPlay="false"
                app:isClipChildrenMode="true"
                app:isHandLoop="true"
                app:isShowIndicatorOnlyOne="true"
                app:isShowNumberIndicator="false"
                app:isShowTips="true"
                app:viewpagerMargin="50dp"
                app:pageChangeDuration="800"
                app:pointsContainerBackground="@drawable/shape_round_8dp"
                app:pointsPosition="RIGHT" />

            <com.stx.xhb.androidx.XBanner
                android:id="@+id/banner5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:AutoPlayTime="3000"
                app:isAutoPlay="false"
                app:isClipChildrenMode="true"
                app:isHandLoop="true"
                app:isShowIndicatorOnlyOne="true"
                app:isShowNumberIndicator="false"
                app:isShowTips="true"
                app:pageChangeDuration="800"
                app:pointsContainerBackground="@drawable/shape_round_8dp"
                app:pointsPosition="RIGHT" />


            <com.stx.xhb.androidx.XBanner
                android:id="@+id/banner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:AutoPlayTime="3000"
                app:bannerBottomMargin="20dp"
                app:clipChildrenLeftMargin="100dp"
                app:clipChildrenRightMargin="100dp"
                app:isAutoPlay="false"
                app:isClipChildrenMode="true"
                app:isHandLoop="true"
                app:isShowIndicatorOnlyOne="true"
                app:isShowNumberIndicator="false"
                app:pageChangeDuration="800"
                app:pointNormal="@drawable/shape_noraml"
                app:pointSelect="@drawable/shape_selected"
                app:pointsContainerBackground="@android:color/transparent"
                app:pointsPosition="CENTER" />


            <com.stx.xhb.androidx.XBanner
                android:id="@+id/banner3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:AutoPlayTime="3000"
                app:bannerBottomMargin="20dp"
                app:isAutoPlay="false"
                app:isClipChildrenMode="true"
                app:isClipChildrenModeLessThree="true"
                app:isHandLoop="true"
                app:isShowIndicatorOnlyOne="true"
                app:isShowNumberIndicator="false"
                app:pageChangeDuration="800"
                app:pointNormal="@drawable/shape_noraml"
                app:pointSelect="@drawable/shape_selected"
                app:showIndicatorInCenter="false" />


            <com.stx.xhb.androidx.XBanner
                android:id="@+id/banner4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:AutoPlayTime="3000"
                app:bannerBottomMargin="20dp"
                app:clipChildrenLeftMargin="@dimen/dp_10"
                app:isAutoPlay="false"
                app:isClipChildrenMode="true"
                app:isHandLoop="true"
                app:isShowIndicatorOnlyOne="true"
                app:isShowNumberIndicator="false"
                app:pageChangeDuration="800"
                app:pointNormal="@drawable/shape_noraml"
                app:pointSelect="@drawable/shape_selected"
                app:pointsContainerBackground="@android:color/transparent"
                app:pointsPosition="CENTER" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
